extends ./layout.jade
block contenido
	div(class="container")
		form(action="/users", method="POST")
			//el id del input debe ser el mismo que el for del label
			div(class="form-group")
				label(for="username") Username
				input(type="text", name="username", placeholder="Nombre de usuario", id="username", class="form-control")
			div(class="form-group")
				label(for="email") Email
				input(type="email", name="email", placeholder="Email", id="email", class="form-control")
			div(class="form-group")
				label(for="password") Contraseña
				input(type="password", name="password", placeholder="Email", id="password", class="form-control")
			div(class="form-group")
				label(for="p_c") Confirma tu contraseña
				input(type="password", name="p_c", placeholder="password confirmation", id="p_c", class="form-control")
			div
				input(type="submit" value="Registrarse" class=" btn btn-danger")